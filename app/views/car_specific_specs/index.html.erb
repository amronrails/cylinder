<%- model_class = CarSpecificSpec -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:car_id) %></th>
      <th><%= model_class.human_attribute_name(:specific_spec_id) %></th>
      <th><%= model_class.human_attribute_name(:value) %></th>
      <th><%= model_class.human_attribute_name(:value_ar) %></th>
      <th><%= model_class.human_attribute_name(:hary) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @car_specific_specs.each do |car_specific_spec| %>
      <tr>
        <td><%= link_to car_specific_spec.id, car_specific_spec_path(car_specific_spec) %></td>
        <td><%= car_specific_spec.car_id %></td>
        <td><%= car_specific_spec.specific_spec_id %></td>
        <td><%= car_specific_spec.value %></td>
        <td><%= car_specific_spec.value_ar %></td>
        <td><%= car_specific_spec.hary %></td>
        <td><%=l car_specific_spec.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_car_specific_spec_path(car_specific_spec), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      car_specific_spec_path(car_specific_spec),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_car_specific_spec_path,
            :class => 'btn btn-primary' %>
