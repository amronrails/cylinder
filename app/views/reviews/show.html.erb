<%- model_class = Review -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:car_id) %>:</strong></dt>
  <dd><%= @review.car_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @review.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @review.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rating) %>:</strong></dt>
  <dd><%= @review.rating %></dd>
  <dt><strong><%= model_class.human_attribute_name(:resale_rating) %>:</strong></dt>
  <dd><%= @review.resale_rating %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tawkeel_rating) %>:</strong></dt>
  <dd><%= @review.tawkeel_rating %></dd>
  <dt><strong><%= model_class.human_attribute_name(:p4v_rating) %>:</strong></dt>
  <dd><%= @review.p4v_rating %></dd>
  <dt><strong><%= model_class.human_attribute_name(:luxury_rating) %>:</strong></dt>
  <dd><%= @review.luxury_rating %></dd>
  <dt><strong><%= model_class.human_attribute_name(:safety_rating) %>:</strong></dt>
  <dd><%= @review.safety_rating %></dd>
  <dt><strong><%= model_class.human_attribute_name(:comment) %>:</strong></dt>
  <dd><%= @review.comment %></dd>
  <dt><strong><%= model_class.human_attribute_name(:votes) %>:</strong></dt>
  <dd><%= @review.votes %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              reviews_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_review_path(@review), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              review_path(@review),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
