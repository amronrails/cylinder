<style>
body {
  background-color: #fafafa;
  color: #666666;
  font-family: "Open Sans", sans-serif;
  -webkit-font-smoothing: antialiased;
  margin: 0;
}

a {
  text-decoration: none;
}

h2 {
  font-weight: 500;
}

h4 {
  font-weight: 100;
  font-size: 0.95em;
}

.filter-bar { 
  width: 100%;
  height: 70px;
  background-color: #e6e6e6;
}

.section {
  display: block;
  margin: 40px;
  min-height: 200px;
}

.info {
  box-sizing: border-box;
  display: inline-block;
  margin: 0;
  padding-left: 20px;
  padding-right: 30px;
  vertical-align: top;
  text-align: left;
  width: 30%;
  //border: 1px solid black;
}

.tiles {
  padding: 10px;
  width: 100%;
  display: inline-block;
  box-sizing: border-box;
  //border: 1px solid black;
}

.tile {
  background-color: #f0f0f0;
  width: 180px;
  height: 160px;
  box-shadow: 0 0 0 3px #fafafa;
  border: 1px solid #ccc;
  border-radius: 5px;
  margin-top: 8px;
  margin-right: 4px;
  display: inline-block;
  box-sizing: border-box;
  transition: box-shadow 0.15s linear;
}

.tile-hover {
  box-shadow: 0 0 0 2px #d2dedf;
  transition: box-shadow 0.15s linear;
}

.label {
  color: #666;
  font-size: 16px;
  font-weight: 500;
  text-align: center;
  margin-top: 25px;
}

.tier-1 {
  position: absolute;
  width: 180px;
  height: 12px;
  border-radius: 5px 5px 0 0;
  background-color: #f18d05;
  margin-left: -1px;
  margin-top: -1px;
}

.tier-2 {
  position: absolute;
  width: 180px;
  height: 12px;
  border-radius: 5px 5px 0 0;
  background-color: #00a1cb;
  margin-left: -1px;
  margin-top: -1px;
}

.tier-3 {
  position: absolute;
  width: 180px;
  height: 12px;
  border-radius: 5px 5px 0 0;
  background-color: #7db500;
  margin-left: -1px;
  margin-top: -1px;
}

.tier-4 {
  position: absolute;
  width: 180px;
  height: 12px;
  border-radius: 5px 5px 0 0;
  background-color: #e54028;
  margin-left: -1px;
  margin-top: -1px;
}
</style>

<script type="text/javascript">
    $(document).ready(function(){

    $(".tile").hover(
      function(){ 
          $(this).toggleClass('tile-hover');
        },

        function(){ 
          $(this).removeClass('tile-hover');
        }
    );
  
});
</script>


